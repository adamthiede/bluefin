[Unit]
Description=Update system Flatpaks
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
ExecStart=/usr/bin/bash -c "/usr/bin/flatpak update --assumeyes --noninteractive --system && /usr/bin/flatpak remove --unused --assumeyes --noninteractive --system"

[Install]
WantedBy=multi-user.target
